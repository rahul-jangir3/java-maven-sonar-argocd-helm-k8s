pipeline {
  agent {
    docker {
      image 'rahuljngr/maven-rahul-docker-agent:v1'
      //sh 'echo -------------------------1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        sh 'echo -------------------------2'
        //git branch: 'main', url: 'https://github.com/rahul-jangir3/java-maven-sonar-argocd-helm-k8s'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'echo -------------------------3'
        // build the project and create a JAR file
        sh 'cd spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://localhost:9000"
        //sh 'echo -------------------------4'
      }
      steps {
        sh 'echo -------------------------5'
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd spring-boot-app && mvn sonar:sonar -Dsonar.login=${SONAR_AUTH_TOKEN} -Dsonar.host.url=${SONAR_URL}'
sh 'echo -------------------------6'
        }
      }
    }
    stage('Build and Push Docker Image') {
      sh 'echo -------------------------7'
      environment {
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
sh 'echo -------------------------8'
      steps {
        script {
            sh 'cd spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
sh 'echo -------------------------9'
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "java-maven-sonar-argocd-helm-k8s"
            GIT_USER_NAME = "rahul-jangir3"
        }
        steps {
sh 'echo -------------------------10'
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    sh 'echo -------------------------11'
                    git config user.email "j.rahuljangir6@gmail.com"
                    git config user.name "Rahul Jangir"
                    BUILD_NUMBER=${BUILD_NUMBER}
                     sh 'echo -------------------------12'
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" spring-boot-app-manifests/deployment.yml
                     sh 'echo -------------------------13'
                    cat spring-boot-app-manifests/deployment.yml
                    git add spring-boot-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                     sh 'echo -------------------------14'
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
